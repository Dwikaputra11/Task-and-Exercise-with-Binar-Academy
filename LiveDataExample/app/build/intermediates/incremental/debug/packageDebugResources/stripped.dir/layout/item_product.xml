<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                          
                                                              
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" android:tag="layout/item_product_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_1"           
                android:layout_centerVertical="true" />

            <TextView
                android:paddingStart="20dp"
                android:id="@+id/tvName"
                android:paddingVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Product"                            
                android:textColor="@color/black"
                android:layout_toEndOf="@id/ivProduct"  android:tag="binding_2"/>

            <TextView
                android:id="@+id/tvStock"
                android:paddingStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock"                                               
                android:layout_below="@id/tvName"
                android:layout_toEndOf="@id/ivProduct"
                android:textColor="@color/black"  android:tag="binding_3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice"
                android:tag="binding_4"                                
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:layout_alignParentEnd="true"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
         