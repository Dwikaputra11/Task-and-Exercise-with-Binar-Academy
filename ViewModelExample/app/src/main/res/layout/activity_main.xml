<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnWithoutViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Without View Model"
        app:layout_constraintBottom_toTopOf="@+id/btnUsingViewModel"
        app:layout_constraintEnd_toEndOf="@+id/btnUsingViewModel"
        app:layout_constraintStart_toStartOf="@+id/btnUsingViewModel" />

    <Button
        android:id="@+id/btnUsingViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using View Model"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecyclerWithoutViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recycler Without View Model"
        app:layout_constraintEnd_toEndOf="@+id/btnUsingViewModel"
        app:layout_constraintStart_toStartOf="@+id/btnUsingViewModel"
        app:layout_constraintTop_toBottomOf="@+id/btnUsingViewModel" />

    <Button
        android:id="@+id/btnRecyclerUsingViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recycler Using View Model"
        app:layout_constraintEnd_toEndOf="@+id/btnRecyclerWithoutViewModel"
        app:layout_constraintStart_toStartOf="@+id/btnRecyclerWithoutViewModel"
        app:layout_constraintTop_toBottomOf="@+id/btnRecyclerWithoutViewModel" />
</androidx.constraintlayout.widget.ConstraintLayout>